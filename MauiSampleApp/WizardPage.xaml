<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSampleApp.WizardPage"
             xmlns:controls="http://dsoft.maui/schemas/controls"
             xmlns:pages="clr-namespace:MauiSampleApp.WizardPages"
             Title="WizardPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Clicked="OnCloseClicked" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="*, Auto">
        <controls:WizardControl Grid.Row="0" x:Name="wzrControl">
            <pages:WizardView1 />
            <pages:WizardView2 />
            <pages:WizardView3 />
        </controls:WizardControl>

        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto">
            
            <Button Text="Back" Grid.Column="0" Clicked="GoBack"/>

            <Button Text="Next" Grid.Column="2" Clicked="GoForward" />
        </Grid>
    </Grid>

</ContentPage>